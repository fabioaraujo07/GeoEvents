<html lang="en">
<head>
    <%- include("../partials/header.ejs") %>
</head>
<body>
    
    <%- include("../partials/nav.ejs") %>

    <h2>Local: <%= ticket.local %></h2>
    <h2>Event: <%= ticket.event %></h2>

    <div class="add-form">
        <form action="/admin/tickets/edit-ticket/<%=ticket._id%>" method="POST">
            <label for="name">Ticket Name:</label>
            <input type="text" id="name" name="name" value="<%= ticket.name %>">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" value="<%= ticket.price %>">
            <input type="hidden" id="local" name="local" value="<%= ticket.local %>">
            <input type="hidden" id="event" name="event" value="<%= ticket.event %>">
            <input type="hidden" name="id" id="id" value="<%=ticket._id%>">
            <button>Update</button>
        </form>
    </div>

</body>
</html>