<html lang="en">
<head>
    <%- include("../partials/header.ejs") %>
</head>
<body>
    
    <%- include("../partials/nav.ejs") %>

    <h2>Local: <%= event.local %></h2>
    <h2>Event: <%= event.name %></h2>

    <div class="add-form">
        <form action="/admin/tickets" method="POST">
            <label for="name">Ticket Name:</label>
            <input type="text" id="name" name="name">
            <label for="price">Price</label>
            <input type="number" id="price" name="price">
            <input type="hidden" id="id" name="id" value="<%= event._id %>">
            <input type="hidden" id="local" name="local" value="<%= event.local %>">
            <input type="hidden" id="event" name="event" value="<%= event.name %>">
            <button>Add</button>
        </form>
    </div>

</body>
</html>