<html lang="en">
<head>
    <%- include("../partials/header.ejs") %>
</head>
<body>
    
    <%- include("../partials/nav.ejs") %>

    <div class="add-form">
        <form action="/admin/locals/edit-local/<%=local._id%>" method="POST">
            <input type="hidden" name="id" id="id" value="<%=local._id%>">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="<%= local.name %>">
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" value="<%= local.description %>">
            <label for="localType">Local Type:</label>
            <select id="localType" name="localType" value="<%= local.localType %>">
                <% localTypes.forEach(localType => { %>
                    <% if(localType.name == local.localType) { %>
                        <option value="<%= localType.name %>" selected><%= localType.name %></option>    
                    <% } %>
                    <option value="<%= localType.name %>"><%= localType.name %></option>
                <% }) %>
            </select>
            <label for="capacity">Capacity:</label>
            <input type="number" id="capacity" name="capacity" value="<%= local.capacity %>">
            <label for="country">Country:</label>
            <input type="text" id="country" name="country" value="<%= local.country %>">
            <label for="city">City</label>
            <input type="text" id="city" name="city" value="<%= local.city %>"> 
            <label for="address">Address</label>
            <input type="text" id="address" name="address" value="<%= local.address %>">
            <button>Update</button>
        </form>
    </div>

</body>
</html>